-- Función para crear una GUI simple de verificación de contraseña
local function createPasswordGui()
    -- Crear un ScreenGui para contener todos los elementos de la GUI
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "PasswordGui"
    screenGui.Parent = game.CoreGui

    -- Crear un marco para contener los elementos de entrada y botones
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0, 350, 0, 250)
    frame.Position = UDim2.new(0.5, -175, 0.5, -125)
    frame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    frame.Parent = screenGui

    -- Añadir bordes redondeados al marco
    local uiCorner = Instance.new("UICorner")
    uiCorner.Parent = frame
    uiCorner.CornerRadius = UDim.new(0, 10)

    -- Crear un título para la GUI
    local titleLabel = Instance.new("TextLabel")
    titleLabel.Text = "Enter Password"
    titleLabel.Size = UDim2.new(1, 0, 0, 50)
    titleLabel.Position = UDim2.new(0, 0, 0, 0)
    titleLabel.BackgroundTransparency = 1
    titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    titleLabel.Font = Enum.Font.GothamSemibold
    titleLabel.TextSize = 24
    titleLabel.Parent = frame

    -- Crear una etiqueta para mostrar el estado
    local statusLabel = Instance.new("TextLabel")
    statusLabel.Text = "Status: Active"
    statusLabel.Size = UDim2.new(0.8, 0, 0, 30)
    statusLabel.Position = UDim2.new(0.1, 0, 0.25, 0)
    statusLabel.BackgroundTransparency = 1
    statusLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    statusLabel.Font = Enum.Font.Gotham
    statusLabel.TextSize = 14
    statusLabel.Parent = frame

    -- Crear una etiqueta para mostrar el ejecutor
    local executorLabel = Instance.new("TextLabel")
    executorLabel.Text = "Executor: Checking..."
    executorLabel.Size = UDim2.new(0.8, 0, 0, 30)
    executorLabel.Position = UDim2.new(0.1, 0, 0.35, 0)
    executorLabel.BackgroundTransparency = 1
    executorLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    executorLabel.Font = Enum.Font.Gotham
    executorLabel.TextSize = 14
    executorLabel.Parent = frame

    -- Crear una etiqueta para mostrar la plataforma
    local platformLabel = Instance.new("TextLabel")
    platformLabel.Text = "Platform: Checking..."
    platformLabel.Size = UDim2.new(0.8, 0, 0, 30)
    platformLabel.Position = UDim2.new(0.1, 0, 0.45, 0)
    platformLabel.BackgroundTransparency = 1
    platformLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    platformLabel.Font = Enum.Font.Gotham
    platformLabel.TextSize = 14
    platformLabel.Parent = frame

    -- Crear una caja de texto para la entrada de la contraseña
    local passwordBox = Instance.new("TextBox")
    passwordBox.Size = UDim2.new(0.8, 0, 0, 50)
    passwordBox.Position = UDim2.new(0.1, 0, 0.6, 0)
    passwordBox.PlaceholderText = "Password"
    passwordBox.Text = ""
    passwordBox.ClearTextOnFocus = false
    passwordBox.TextColor3 = Color3.fromRGB(255, 255, 255)
    passwordBox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    passwordBox.Font = Enum.Font.GothamSemibold
    passwordBox.TextSize = 18
    passwordBox.Parent = frame

    -- Añadir bordes redondeados a la caja de texto
    local uiCornerBox = Instance.new("UICorner")
    uiCornerBox.Parent = passwordBox
    uiCornerBox.CornerRadius = UDim.new(0, 10)

    -- Crear un botón de envío
    local submitButton = Instance.new("TextButton")
    submitButton.Size = UDim2.new(0.8, 0, 0, 50)
    submitButton.Position = UDim2.new(0.1, 0, 0.75, 0)
    submitButton.Text = "Submit"
    submitButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    submitButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    submitButton.Font = Enum.Font.GothamSemibold
    submitButton.TextSize = 18
    submitButton.Parent = frame

    -- Añadir bordes redondeados al botón
    local uiCornerButton = Instance.new("UICorner")
    uiCornerButton.Parent = submitButton
    uiCornerButton.CornerRadius = UDim.new(0, 10)

    -- Función para detectar el ejecutor
    local function detectExecutor()
        local executor
        if syn then
            executor = "Synapse X"
        elseif Krnl then
            executor = "Krnl"
        elseif getexecutorname then
            executor = getexecutorname()
        else
            executor = "Unknown"
        end
        return executor
    end

    -- Función para detectar la plataforma
    local function detectPlatform()
        local platform
        if game:GetService("UserInputService").TouchEnabled then
            platform = "Mobile"
        elseif game:GetService("UserInputService").KeyboardEnabled then
            platform = "PC"
        elseif game:GetService("UserInputService").GamepadEnabled then
            platform = "Console"
        else
            platform = "Unknown"
        end
        return platform
    end

    -- Actualizar las etiquetas de ejecutor y plataforma
    executorLabel.Text = "Executor: " .. detectExecutor()
    platformLabel.Text = "Platform: " .. detectPlatform()

    -- Función para manejar el clic del botón de envío
    submitButton.MouseButton1Click:Connect(function()
        -- Verificar si la contraseña es correcta
        if passwordBox.Text == "CodeWareOnTop!" then
            -- Destruir la GUI del loader
            screenGui:Destroy()
            -- Cargar el hub desde un loadstring
            loadstring(game:HttpGet("https://raw.githubusercontent.com/UalfTV/CodeWareHub/refs/heads/main/CodeWareScript"))()
        else
            -- Mostrar mensaje de acceso denegado
            passwordBox.TextColor3 = Color3.fromRGB(255, 88, 88)
            passwordBox.Text = "Access Denied"
            wait(2)
            passwordBox.TextColor3 = Color3.fromRGB(255, 255, 255)
            passwordBox.Text = ""
        end
    end)
end

-- Cargar la GUI de verificación de contraseña inicialmente
createPasswordGui()
